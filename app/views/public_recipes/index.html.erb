<section class="publicPage">
<h1>Public Recipes</h1>
<ul>
  <% @recipes.each do |recipe| %>
    <li><%= link_to recipe.name, recipe_path(recipe) %></li>
    <div>
        <h5><%= recipe.name %></h3>
        <p>By: <%= recipe.user&.name %></p>
      </div>
          <div>
            <p>Total food items: <%= @recipe_ingredients.where(recipe: recipe).count %></p>
            <p>Total Price: $ <%= @recipe_ingredients.where(recipe: recipe).map {|value| value.food.price * value.quantity}.sum %></p>
          </div>
  <% end %>
</ul>
</section>